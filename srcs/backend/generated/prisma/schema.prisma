generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:/Users/yohan/Desktop/ft_transcendence/sqlite-data/database.sqlite"
}

model user_info {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  username  String  @unique(map: "sqlite_autoindex_user_info_1")
  users     users[]
}

model users {
  id          Int       @id @default(autoincrement())
  user_id     Int
  provider_id String
  login_type  String
  password    String?
  email       String    @unique(map: "sqlite_autoindex_users_1")
  user_info   user_info @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([login_type, provider_id], map: "sqlite_autoindex_users_2")
}
